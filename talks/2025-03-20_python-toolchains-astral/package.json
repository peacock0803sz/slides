{
  "name": "python-toolchains-astral",
  "private": true,
  "scripts": {
    "build": "pnpm run /^build:*/",
    "postbuild": "mv ./dist ../../dist/python-toolchains-astral",
    "dev": "slidev",
    "export:pdf": "mkdir -p dist && slidev export --format pdf --output dist/python-toolchains-astral.pdf",
    "build:html": "slidev build --base /python-toolchains-astral/",
    "prebuild:cover": "mkdir -p slides-export",
    "build:cover": "slidev export slides.md --format png",
    "postbuild:cover": "mv slides-export/1.png dist/cover.png"
  },
  "dependencies": {
    "@slidev/cli": "catalog:"
  },
  "devDependencies": {
    "playwright-chromium": "catalog:"
  }
}
