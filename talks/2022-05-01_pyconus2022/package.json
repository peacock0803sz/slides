{
  "name": "pyconus2022",
  "private": true,
  "scripts": {
    "build": "pnpm run /^build:*/",
    "postbuild": "mv ./dist ../../dist/pyconus2022",
    "build:html": "slidev build slides.md --base /pyconus2022/",
    "dev": "slidev slides.md",
    "export": "slidev export slides.md --output ./dist/pyconus2022.pdf",
    "prebuild:cover": "mkdir -p slides-export",
    "build:cover": "slidev export --format png",
    "postbuild:cover": "mv slides-export/1.png dist/cover.png"
  },
  "dependencies": {
    "@slidev/cli": "catalog:",
    "@slidev/theme-bricks": "0.0.2"
  },
  "devDependencies": {
    "playwright-chromium": "catalog:"
  }
}
